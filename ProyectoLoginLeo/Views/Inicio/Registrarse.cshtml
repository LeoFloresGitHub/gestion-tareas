@model ProyectoLoginLeo.models.Usuario

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registrarse</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>

    <div class="container mt-5 p5-5">
        <div class=" row justify-context-center">

            <div class="card">
                <div class="card-header">
                   Registro 
                </div>
                <div class="card-body">
                        <form asp-controller="Inicio" asp-action="Registrarse" method="post">
                            <input class="form-control mb-3" type="text" placeholder="Nombre completo" asp-for="NombreUsuario" required/>
                            <input class="form-control mb-3" type="text" placeholder="Correo" asp-for="Correo" required/>
                            <input class="form-control mb-3" type="text" placeholder="Contraseña" asp-for="Clave" required/>
                            <div class="d-grid gap-2 mb-3">
                                <button class="btn btn-primary" type="submit"> Registrarse</button>
                            </div>
                            @if(ViewData["Message"]!= null)
                        {
                            <div class="form-group">
                                <div class="alert alert-danger" role="alert">
                                    @ViewData["Message"]
                                </div>
                            </div>
                        }
                        ¿Ya tienes una cuenta? <a href="@Url.Action("IniciarSesion","Inicio")">Iniciar Sesión</a>
                    </form>
                </div>

            </div>
        </div>

    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    
</body>
</html>
